# Bridge Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider API Keys (at least one required)
# =============================================================================

# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI GPT
OPENAI_API_KEY=

# Google Gemini
GOOGLE_API_KEY=

# Ollama (local models)
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# GitHub Integration
# =============================================================================

# GitHub Personal Access Token (required for PR operations)
GITHUB_TOKEN=

# Webhook secret for signature verification (optional)
GITHUB_WEBHOOK_SECRET=

# =============================================================================
# Database (PostgreSQL)
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgres://bridge:bridge@localhost:5432/bridge?sslmode=disable

# Individual components (alternative to DATABASE_URL)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=bridge
# POSTGRES_PASSWORD=bridge
# POSTGRES_DB=bridge

# =============================================================================
# Message Queue (RabbitMQ)
# =============================================================================

# RabbitMQ connection string
RABBITMQ_URL=amqp://bridge:bridge@localhost:5672/

# =============================================================================
# Application Settings
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# Server port (for webhook receiver)
PORT=8080

# =============================================================================
# Observability
# =============================================================================

# OpenTelemetry endpoint (optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# Policy Engine
# =============================================================================

# Path to custom policies directory
# POLICY_PATH=./policies

# Enable strict policy mode (fail on policy errors)
# STRICT_POLICY=true
